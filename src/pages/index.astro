---
import Link from "@components/Link.astro"
import Layout from "src/layouts/Layout.astro";

const title = "Astro 30 days"
---

<Layout title={title}>
  <h1>30 Days of CSS</h1>
  <div>
    <h2>List of Proyects</h2>
    <ul>
      <li>
        <Link path="/neon-button" text="Glowing neon-button" />
      </li>
      <li>
        <Link path="/neumorphism" text="Neumorphism: Login & Sign Up" />
      </li>
    </ul>
  </div> 
</Layout>

<style>
ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}
li {
  padding: 2px;
  margin: 2px;
}
</style>
