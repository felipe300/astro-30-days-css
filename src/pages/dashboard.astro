          <SVG src="img4" alt="member-4" ext="jpg" />
        </div>
      </div>
      <div class="task-box green">
        <div class="description-task">
          <div class="time">03:00 - 04:00 PM</div>
          <div class="task-name">Release Event</div>
        </div>
        <div class="more-button"></div>
        <div class="members">
          <SVG src="img5" alt="member" ext="jpg" />
          <SVG src="img6" alt="member-2" ext="jpg" />
          <SVG src="img7" alt="member-3" ext="jpg" />
          <SVG src="img8" alt="member-4" ext="jpg" />
          <SVG src="img9" alt="member-5" ext="jpg" />
