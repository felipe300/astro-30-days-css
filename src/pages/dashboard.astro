---
import Event from "@components/dashboard/Event.astro";
import ItemCard from "@components/dashboard/ItemCard.astro";
import ItemNav from "@components/dashboard/ItemNav.astro";
import SvgList from "@components/dashboard/SvgList.astro";
import SVG from "@components/SVG.astro";
import { actionList, categoryList } from "@scripts/dashboard";
import "@styles/Dashboard.css";
---

<main class="task-manager">
  <!-- LEFT BAR START -->
  <div class="left-bar">
    <div class="upper-part">
      <div class="actions">
        <div class="circle"></div>
        <div class="circle-2"></div>
      </div>
    </div>

    <!-- LEFT CONTENT START -->
    <aside class="left-content">
      <ul class="action-list">
        {
          actionList.map(({ svg, text, ext }) => (
            <SvgList svg={svg} text={text} ext={ext} />
          ))
        }
      </ul>
      <ul class="category-list">
        {
          categoryList.map(({ svg, text, ext }) => (
            <SvgList svg={svg} text={text} ext={ext} />
          ))
        }
      </ul>
    </aside>
    <!-- LEFT CONTENT END -->
  </div>
  <!-- LEFT BAR END -->
  <!-- PAGE CONTENT START -->
  <section class="page-content">
    <div class="header">Today Tasks</div>
    <!-- CONTENT CATEGORIES START -->
    <div class="content-categories">
      <ItemNav id="opt-1" text="All" />
      <ItemNav id="opt-2" text="Important" />
      <ItemNav id="opt-3" text="Notes" />
      <ItemNav id="opt-4" text="Links" />
    </div>
    <!-- CONTENT CATEGORIES END -->

    <!-- TASKS WRAPPER START -->
    <div class="tasks-wrapper">
      <ItemCard
        id="item-1"
        status={"approved"}
        task="Dashboard Design Implementation"
        isChecked
      />
      <ItemCard
        id="item-2"
        status={"progress"}
        task="Create a userflow"
        isChecked
      />
      <ItemCard
        id="item-3"
        status={"review"}
        task="Aplication Implementation"
      />
      <ItemCard id="item-4" status={"progress"} task="Create a Dashboard" />
      <ItemCard
        id="item-5"
        status={"approved"}
        task="Create a Web Application Design"
      />
      <ItemCard id="item-6" status={"waiting"} task="Interactive Design" />

      <div class="header upcoming">Upcoming Tasks</div>

      <ItemCard
        id="item-7"
        status={"waiting"}
        task="Dashboard Design Implementation"
      />
      <ItemCard id="item-8" status={"waiting"} task="Create a userflow" />
      <ItemCard
        id="item-9"
        status={"waiting"}
        task="Application Implementation"
      />
      <ItemCard id="item-10" status={"waiting"} task="Create a Dashboard" />
    </div>
    <!-- TASKS WRAPPER END -->
  </section>
  <!-- PAGE CONTENT END -->

  <!-- RIGHT BAR START -->
  <aside class="right-bar">
    <div class="top-part">
      <SVG
        src="users"
        alt="Users Logo"
        ext="svg"
        classes="feather feather-users"
      />
      <div class="count">6</div>
    </div>
    <div class="header">Schedule</div>
    <div class="right-content">
      <Event
        time={"08:00 - 9:00 AM"}
        eventTitle={"Product Review"}
        color={"yellow"}
      >
        <SVG src="img1" alt="member" ext="jpg" />
        <SVG src="img2" alt="member-2" ext="jpg" />
        <SVG src="img3" alt="member-3" ext="jpg" />
        <SVG src="img4" alt="member-4" ext="jpg" />
      </Event>
      <Event
        time={"10:00 - 11:00 AM"}
        eventTitle={"Design Meetings"}
        color={"blue"}
      >
        <SVG src="img5" alt="member" ext="jpg" />
        <SVG src="img6" alt="member-2" ext="jpg" />
        <SVG src="img7" alt="member-3" ext="jpg" />
      </Event>
      <Event time={"01:00 - 2:00 PM"} eventTitle={"Team Meeting"} color={"red"}>
        <SVG src="img1" alt="member" ext="jpg" />
        <SVG src="img2" alt="member-2" ext="jpg" />
        <SVG src="img3" alt="member-3" ext="jpg" />
        <SVG src="img4" alt="member-4" ext="jpg" />
      </Event>
      <Event
        time={"03:00 - 4:00 PM"}
        eventTitle={"Release Event"}
        color={"green"}
      >
        <SVG src="img5" alt="member" ext="jpg" />
        <SVG src="img6" alt="member-2" ext="jpg" />
        <SVG src="img7" alt="member-3" ext="jpg" />
        <SVG src="img8" alt="member-4" ext="jpg" />
        <SVG src="img9" alt="member-5" ext="jpg" />
      </Event>
      <Event
        time={"08:00 - 9:00 PM"}
        eventTitle={"Release Event"}
        color={"blue"}
      >
        <SVG src="img5" alt="member" ext="jpg" />
        <SVG src="img6" alt="member-2" ext="jpg" />
        <SVG src="img7" alt="member-3" ext="jpg" />
        <SVG src="img8" alt="member-4" ext="jpg" />
        <SVG src="img9" alt="member-5" ext="jpg" />
      </Event>
      <Event time={"11:00 - 12:00 PM"} eventTitle={"Practice"} color={"yellow"}>
        <SVG src="img1" alt="member" ext="jpg" />
        <SVG src="img2" alt="member-2" ext="jpg" />
        <SVG src="img3" alt="member-3" ext="jpg" />
        <SVG src="img4" alt="member-4" ext="jpg" />
      </Event>
    </div>
  </aside>
  <!-- RIGHT BAR END -->
</main>
