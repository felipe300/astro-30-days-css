---
import { Image } from "@astrojs/image/components";
import type { ExtensionLevel } from "@scripts/dashboard";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  classes?: string;
  ext: ExtensionLevel;
}

const { src, alt, width = 25, height = 25, classes, ext } = Astro.props;
---

<Image
  src={`/images/${ext === "svg" ? "svg" : "jpg"}/${src}.${ext}`}
  alt={`${alt} ${ext === "svg" ? "svg" : "image"}`}
  width={width}
  height={height}
  class:list={[classes]}
/>
